	<h1 class = "now-title" id =<%=user%>><%= __('now_header') %></h1>
	<h2 class = "now-subtitle"><%= __('now_sub_header') %></h2>
	<h2 id="photos-link" class="favotites"> ♥♥♥ <%= __('photos') %> ♥♥♥ </h2>
	<div class = "fav-photos">
		<% images.forEach(image => { %>
			<div class = "card-body">
				<img src=<%=image.path%>>
				<div class="likes-info">
					<button class="like-button"  onclick="actOnPost(event);">
						<% if(image.users.includes(user)){ %>
							<img src="icons/hearts-like.png" class="like-icon" id="<%=image.id%>">
						  <% } else{ %>  
							<img src="icons/hearts-unlike.png" class="like-icon" id="<%=image.id%>">
						<% } %>
					</button>
					<div class="likes-count" id="likes-count-<%=image.id%>"><%=image.likes%></div>
				</div>
			</div>
		<% }) %>
	</div>
	
	
