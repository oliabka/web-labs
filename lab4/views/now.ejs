	<h2 id="videos-link" class="favotites"> ♥♥♥ <%= __('videos') %> ♥♥♥ </h2>
	<div class = "fav-videos"> 
		<% youTubes.forEach(youtube => { %>
			<div class = "card-body">
				<iframe width="560" height="315" src=<%=youtube.path%> title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
